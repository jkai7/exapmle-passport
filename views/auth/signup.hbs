<!-- views/auth/signup.hbs -->
<h1>Signup</h1>

<form action="/signup" method="POST" id="form-container"> <!--action needs to match your path-->
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow"> <!-- name: creates your keys in req.dody-->
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button>Create account</button> <!-- button inside of form is default submit type-->

  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>

<a href="/">Index</a>
